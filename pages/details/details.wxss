/* pages/details/details.wxss */


.im-container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
}


/* 视频播放 */

.im-container .video-container {
    width: 100%;
    height: 406rpx;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 999;
    background-color: #fff;
}

.im-container .video-container .video {
  width: 100%;
  height: 406rpx;
}

/* 视频播放 end */


/* 聊天区域 */
.im-container .im-wrap {
  display: flex;
  flex-direction: column;
  margin-top: 406rpx;
}
/* 聊天区域end */


/* 分享咨询 */

.share button {
  position: fixed;
  right: 30rpx;
  bottom: 260rpx;
  width: 94rpx;
  height: 94rpx;
  background-color: transparent;
  border: none;
  border-radius: 50%;
}

.share-container .share {
  position: fixed;
  right: 30rpx;
  bottom: 260rpx;
  width: 94rpx;
  height: 94rpx;
  background-color: #ED6942;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  font-size: 26rpx;
}

.share-container .service {
  position: fixed;
  right: 30rpx;
  bottom: 160rpx;
  width: 94rpx;
  height: 94rpx;
  background-color: #0080CC;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  font-size: 26rpx;
}

/* 分享咨询end */