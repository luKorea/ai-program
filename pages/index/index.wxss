/* 头部区域 */
.video-container {
  position: relative;
  width: 100%;
  height: 500rpx;
}

.video-container .img {
  width: 100%;
  height: 500rpx;
}

.video-container .img image {
  width: 100%;
  height: 100%;
}

.video-container .modal {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 74rpx;
  position: absolute;
  left: 0;
  bottom: 0;
  background-color: #000000;
  opacity: 0.6;
  color: #fff;
}

.video-container .modal .modal-content {
  width: 100%;
  display: flex;
  justify-content: space-around;
  font-size: 24rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #FFFFFF;

}


.video-container .hide-btn {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 500rpx;
  background: transparent;
  padding: 0;
}

/* 头部区域 end */

/* 课程列表 */
.course-container {
  margin: 32rpx 26rpx;
}

.course-container .title {
  font-size: 28rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #343434;
}


.course-container .content {
  margin-top: 32rpx;
  display: flex;
  width: 100%;
  flex-wrap: wrap;
  justify-content: space-between;
}

.course-container .item {
  display: flex;
  /* flex-wrap: wrap; */
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
}

.course-container .item .img {
  width: 338rpx;
  height: 180rpx;
}

.course-container .item .text {
  margin-top: 20rpx;
  font-size: 26rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #343434;
}

/* 课程列表end */


/*  登陆模态框 */

.login-container {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100vh;
  background: rgba(0, 0, 0, .8);
}

.login-container .login-wrap {
  width: 100%;
  margin: 40rpx;
  /* background: #FFFFFF; */
  /* opacity: 1; */
  z-index: 999;
}


.form-container {
  width: 100%;
  height: 500rpx;
  background-color: #fff;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}

.form-container .title {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 40rpx;
  font-family: Microsoft YaHei;
  font-weight: bold;
  color: #333333;
  text-align: center;
  border-bottom: 1px solid #E9E9E9;
  margin-bottom: 50rpx;
}

.form-container .page-section {
  margin: 20rpx;
  display: flex;
  height: 80rpx;
  line-height: 80rpx;
}

.form-container .page-section .label {
  font-size: 30rpx;
  /* font-family: Microsoft YaHei; */
  font-weight: 400;
  margin-right: 10rpx;
  width: 20%;
}

.form-container .page-section .input {
  border: 1px solid #E9E9E9;
  width: 75%;
  height: 80rpx;
  font-size: 30rpx;
  color: #aab2bd;
  padding-left: 20rpx;
  border-radius: 10rpx;
  box-sizing: border-box;
}



.form-container .page-section-code {
  margin: 20rpx;
  display: flex;
  height: 80rpx;
  line-height: 80rpx;
}

.form-container .page-section-code .label {
  font-size: 30rpx;
  /* font-family: Microsoft YaHei; */
  font-weight: 400;
  width: 20%;
}

.form-container .page-section-code .input {
  border: 1px solid #E9E9E9;
  height: 80rpx;
  width: 60%;
  font-size: 30rpx;
  color: #aab2bd;
  padding-left: 20rpx;
  border-radius: 10rpx;
  margin-right: 5rpx;
  box-sizing: border-box;
}

.form-container .page-section-code .code-btn  {
  width: 112rpx;
  border: 1px solid #E9E9E9;
  color: #aab2bd;
  border-radius: 10rpx;
  padding: 0 5rpx;
  font-size: 20rpx;
  line-height: 0; 
  display: flex; 
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}


.phClass {
  /* placeholder颜色 */
  color: #aab2bd;
  /* placeholder字体大小 */
  font-size: 24rpx;
  margin-left: 10rpx;
}

.login-container .login-wrap .btn-area button {
  background-color: #0096DA;
  color: #fff;
  font-family: Microsoft YaHei;
  font-weight: 400;
  width: 100%;
  border-radius: 0;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}


/* 登陆模态框 end */